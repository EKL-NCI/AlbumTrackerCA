<%= form_with(model: album, local: true) do |form| %>
  <% if album.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(album.errors.count, "error") %> prohibited this album from being saved:</h4>
      <ul>
        <% album.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :artist, class: "form-label" %>
    <%= form.text_field :artist, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :release_year, class: "form-label" %>
    <%= form.number_field :release_year, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :genre, class: "form-label" %>
    <%= form.text_field :genre, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :rating, class: "form-label" %>
    <%= form.number_field :rating, class: "form-control", min: 1, max: 5 %>
  </div>

  <div class="form-check mb-3">
    <%= form.check_box :availability, class: "form-check-input" %>
    <%= form.label :availability, class: "form-check-label" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
