<p style="color: green"><%= notice %></p>

<% content_for :title, "Albums" %>

<h1>Albums</h1>
<p>Total albums: <%= @albums.count %></p>
<%= link_to "New Album", new_album_path, class: "btn btn-success mb-3" %>
<br><br>

<div id="albums">
  <% @albums.each do |album| %>
    <%= render album %>
    <p>
      <%= link_to "Show this album", album %>
    </p>
  <% end %>
</div>


