<table class="table table-striped table-hover">
  <thead class="table-dark">
  <h1 class="mb-4">Albums</h1>
    <tr>
      <th>Cover</th>
      <th>Title</th>
      <th>Artist</th>
      <th>Year</th>
      <th>Genre</th>
      <th>Rating</th>
      <th>Availability</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td>
          <div class="mb-3 text-center">
            <%= display_cover(album, size: "100x100") %>
          </div>
        </td>
        <td><%= album.title %></td>
        <td><%= album.artist %></td>
        <td><%= album.release_year %></td>
        <td><%= album.genre %></td>
        <td>
          <span class="text-warning fs-5"><%= star_rating(album.rating) %></span>
        </td> 
        <td>
          <% if album.availability %>
            <span class="badge bg-success">Available</span>
          <% else %>
            <span class="badge bg-danger">Unavailable</span>
          <% end %>
        </td>
        <td>
          <div class="d-flex gap-2">
            <%= link_to "Show", album_path(album), class: "btn btn-sm btn-primary" %>
            <%= link_to "Edit", edit_album_path(album), class: "btn btn-sm btn-warning" %>
            <%= button_to "Destroy", album_path(album), method: :delete, data: { confirm: "Are you sure you want to delete this album?" }, class: "btn btn-sm btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>